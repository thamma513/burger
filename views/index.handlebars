<h1>Burgers!</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>{{burger_name}}</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block}}
    {{/if}}
  {{/each}}
</ul>
<form class="create-form">

  <div class="form-group">
    <label for="burgers">Burger::</label>
    <input type="text" id="burgers" name="burger_name">
  </div>


  <button type="submit">Add A Burger</button>
</form>


